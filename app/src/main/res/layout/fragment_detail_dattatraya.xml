<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetailDattatrayaFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/dattatryaimg1"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/dattatraya"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="146dp"
                    android:text="@string/dattatraya" />

                <ImageView
                    android:id="@+id/dattatryaimg2"
                    android:layout_width="match_parent"
                    android:layout_height="146dp"
                    android:src="@drawable/dattatraya2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:text="@string/dattatraya" />
                <ImageView
                    android:id="@+id/dattatryaimg3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dattatraya3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3"
                >

                <ImageView
                    android:id="@+id/dattatryaimg4"
                    android:layout_width="wrap_content"
                    android:layout_height="253dp"
                    android:src="@drawable/dattatraya4" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dattatraya"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</FrameLayout>